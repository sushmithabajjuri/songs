<%= form_for @music, :html => { :class => "form-horizontal music" } do |f| %>

  <% if @music.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@music.errors.count, "error") %> prohibited this music from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @music.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :name, :class => 'form-control' %>
    </div>
    <%=f.error_span(:name) %>
  </div>
  <div class="form-group">
    <%= f.label :movie, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :movie, :class => 'form-control' %>
    </div>
    <%=f.error_span(:movie) %>
  </div>
  <div class="form-group">
    <%= f.label :singer, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :singer, :class => 'form-control' %>
    </div>
    <%=f.error_span(:singer) %>
  </div>
  <div class="form-group">
    <%= f.label :duration, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :duration, :class => 'form-control' %>
    </div>
    <%=f.error_span(:duration) %>
  </div>
  <div class="form-group">
    <%= f.label :director, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :director, :class => 'form-control' %>
    </div>
    <%=f.error_span(:director) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                musics_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
